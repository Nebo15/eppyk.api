{% extends 'templates/main.twig' %}

{% block main %}
    <h1 class="page-header">{% if model.isNew() %}Add new answer{% else %}Edit answer{% endif %}</h1>

    <form method="POST" action="/admin/answers/edit">
        <input class="form-control" type="hidden" name="id" value="{{ model.id }}">
        <input class="form-control" type="hidden" name="locale" value="{{ locale }}">
        <div class="form-group">
            <label for="disabledInput">Locale</label>
            <input class="form-control" id="disabledInput" type="text" value="{{ locale }}" disabled>
        </div>
        <div class="form-group">
            <label for="answerText">Answer</label>
            <textarea id="answerText" class="form-control" name="text">{{ model.text }}</textarea>
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input class="form-control" type="text" name="author" id="author" value="{{ model.author }}">
        </div>
        <div class="checkbox">
            <label>
                <input id="active" type="checkbox" name="active" {% if model.active %}checked{% endif %}> Active
            </label>
        </div>
        <hr/>
        <button type="submit" class="btn btn-success">
            {% if model.isNew() %}Create{% else %}Update{% endif %}
        </button>

        <button type="reset" class="btn btn-default">Reset</button>
    </form>
{% endblock %}