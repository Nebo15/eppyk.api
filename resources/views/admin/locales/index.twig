{% extends "templates/main.twig" %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Locales</h1>
            {% if no_default %}
            <p>You must set default locale.</p>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Code</th>
                        <th>Count Answers</th>
                        <th>Active</th>
                        <th>Default</th>
                        <th>Manage</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for locale in locales %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ locale.title }}</td>
                            <td>{{ locale.code }}</td>
                            <td>{{ locale.answers.count() }}</td>
                            <td>{% if locale.active %}true{% else %}false{% endif %}</td>
                            <td>{% if locale.default %}true{% else %}false{% endif %}</td>
                            <td>
                                <a href="/admin/locales/update/{{ locale.id }}"><span
                                            class="glyphicon glyphicon-pencil"></span></a>
                                <a href="/admin/locales/delete/{{ locale.id }}"
                                   onclick="if(!confirm('Are you sure?')){return false;}"><span
                                            class="glyphicon glyphicon-remove"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td colspan="6"></td>
                        <td><a href="/admin/locales/create" class="btn btn-sm btn-primary">Add locale</a></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}