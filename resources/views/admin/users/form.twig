{% extends 'templates/main.twig' %}

{% block main %}
    <h1 class="page-header">{% if model.isNew() %}Add new user{% else %}Edit user{% endif %}</h1>


    <form method="POST" action="/admin/users/edit">
        <input class="form-control" type="hidden" name="id" value="{{ model.id }}">
        <div class="form-group col-lg-3">
            <label for="userText">Login</label>
            <input id="userText" class="form-control" name="login" type="text" value="{{ model.login }}" />
        </div>
        <div class="form-group col-lg-3">
            <label for="userPassword">Password</label>
            <input id="userPassword" class="form-control" name="password" type="password" />
        </div>
        <div class="clearfix"></div>
        <div class="form-group col-lg-3">
            <label for="userPassword">Role</label>
            <select class="form-control" name="role">
                <option value="admin"{% if model.role == 'admin' %} selected{% endif %}>admin</option>
                <option value="manager"{% if model.role == 'manager' %} selected{% endif %}>manager</option>
            </select>
        </div>
        <div class="clearfix"></div>
        <hr/>
        <button type="submit" class="btn btn-success">
            {% if model.isNew() %}Create{% else %}Update{% endif %}
        </button>

        <button type="reset" class="btn btn-default">Reset</button>
    </form>
{% endblock %}